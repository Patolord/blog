<h1 class="text-4xl font-bold text-gray-800 mb-6"><%= @article.title %></h1>

<p class="text-base text-gray-700 mb-4"><%= @article.body %></p>

<ul class="list-none p-0 flex">
  <li class="mx-1">
    <%= link_to "Edit", edit_article_path(@article), class: "inline-block bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600" %>
  </li>
  <li class="mx-1">
    <%= link_to "Destroy", article_path(@article), class: "inline-block bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </li>
  <li class="mx-1">
    <%= link_to "Go Back", root_path, class: "inline-block bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600" %>
  </li>
</ul>
